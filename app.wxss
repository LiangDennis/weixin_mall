@import "./styles/iconfont.wxss";

/* 初始化 */
page,view,text,swiper,swiper-item,image,navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 主体颜色 用变量实现 */
page {
  /* 定义主体颜色 */
  --themeColor: #eb4450;
  /* 定义统一的字体大小，假设设计稿大小是 375 */
  /* 隐含关系：1px === 2rpx */
  font-size: 28rpx;
}

image {
  width: 100%;
}